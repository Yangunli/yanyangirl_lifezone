{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/taipei{,/**}",
        "destination": "/index.html"
      },
      {
        "regex": "/tainan(/.*)?",
        "destination": "/index.html"
      },
      {
        "regex": "/taichung(/.*)?",
        "destination": "/index.html"
      },
      {
        "regex": "/artist(/.*)?",
        "destination": "/index.html"
      }
    ]
  }
}